        // Initial dates setup
        const today = new Date();
        let startDate = new Date();
        let endDate = new Date(startDate);
        endDate.setMonth(endDate.getMonth() + 2);
        
        // Load saved dates from localStorage if available
        function loadSavedDates() {
            const savedStartDate = localStorage.getItem('resExamStartDate');
            if (savedStartDate) {
                startDate = new Date(savedStartDate);
                endDate = new Date(startDate);
                endDate.setMonth(endDate.getMonth() + 2);
            }
        }
        
        // Save dates to localStorage
        function saveDates() {
            localStorage.setItem('resExamStartDate', startDate.toISOString());
        }
        
        // Load saved dates on page load
        loadSavedDates();
        
        // Update the displayed dates
        document.getElementById('start-date').textContent = formatDate(startDate, 'long');
        document.getElementById('end-date').textContent = formatDate(endDate, 'long');
        
        // Set the default value for the date input
        document.getElementById('new-date-input').value = formatDateISO(startDate);
        
