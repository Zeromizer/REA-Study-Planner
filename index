        // Event Listeners
        document.getElementById('change-date-btn').addEventListener('click', function() {
            const datePicker = document.getElementById('date-picker');
            datePicker.style.display = datePicker.style.display === 'none' ? 'block' : 'none';
        });
        
        document.getElementById('apply-date-btn').addEventListener('click', function() {
            const newDateInput = document.getElementById('new-date-input').value;
            if (newDateInput) {
                startDate = new Date(newDateInput);
                endDate = new Date(startDate);
                endDate.setMonth(endDate.getMonth() + 2);
                
                document.getElementById('start-date').textContent = formatDate(startDate, 'long');
                document.getElementById('end-date').textContent = formatDate(endDate, 'long');
                
                document.getElementById('date-picker').style.display = 'none';
                
                // Save the new dates to localStorage
                saveDates();
                
                // Regenerate calendar with new dates
                generateCalendar();
            }
        });
        
        document.getElementById('modal-close').addEventListener('click', function() {
            document.getElementById('detail-modal').style.display = 'none';
        });
        
        document.getElementById('modal-close-btn').addEventListener('click', function() {
            document.getElementById('detail-modal').style.display = 'none';
        });
        
        // Functions
        function generateCalendar() {
            const calendarContainer = document.getElementById('calendar-container');
            calendarContainer.innerHTML = '';
            
            const calendar = createCalendarArray();
            const calendarByMonth = groupByMonth(calendar);
            
            // Generate calendar UI
            Object.entries(calendarByMonth).forEach(([monthYear, entries]) => {
                const monthSection = document.createElement('div');
                monthSection.className = 'month-section';
                
                const monthTitle = document.createElement('h2');
                monthTitle.className = 'month-title';
                monthTitle.textContent = monthYear;
                monthSection.appendChild(monthTitle);
                
                entries.forEach(entry => {
                    const studyDay = document.createElement('div');
                    studyDay.className = 'study-day';
                    studyDay.setAttribute('data-date', formatDate(entry.date));
                    studyDay.setAttribute('data-topic', entry.topic);
                    studyDay.setAttribute('data-details', entry.details.details);
                    studyDay.setAttribute('data-duration', entry.details.duration);
                    studyDay.setAttribute('data-subtopics', JSON.stringify(entry.details.subtopics));
                    
                    studyDay.innerHTML = `
                        <div class="info-row">
                            <input type="checkbox" class="completed-checkbox" data-id="${formatDate(entry.date)}-${encodeURIComponent(entry.topic)}" ${isTopicCompleted(entry.date, entry.topic) ? 'checked' : ''}>
                            <div class="date-badge">${formatDate(entry.date, 'short')}</div>
                            <div class="topic-info">
                                <h3>${entry.topic} ${isTopicCompleted(entry.date, entry.topic) ? '<span class="completed-badge">Completed</span>' : ''}</h3>
                                <p>${entry.details.duration}</p>
                            </div>
                        </div>
                        <div>
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#3b82f6" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <polyline points="9 18 15 12 9 6"></polyline>
                            </svg>
                        </div>
                    `;
                    
                    if (isTopicCompleted(entry.date, entry.topic)) {
                        studyDay.classList.add('completed-topic');
                    }
                    
                    studyDay.addEventListener('click', function(e) {
                        if (e.target.type === 'checkbox') {
                            e.stopPropagation();
                            handleTopicCompletion(e.target, entry.date, entry.topic);
                        } else {
                            showModal(this);
                        }
                    });
                    
                    const checkbox = studyDay.querySelector('.completed-checkbox');
                    checkbox.addEventListener('click', function(e) {
                        e.stopPropagation();
                        handleTopicCompletion(this, entry.date, entry.topic);
                    });
                    
                    monthSection.appendChild(studyDay);
                });
                
                calendarContainer.appendChild(monthSection);
            });
        }
        
        function createCalendarArray() {
            let calendar = [];
            let currentDate = new Date(startDate);
            let studyIndex = 0;
            
            while (currentDate <= endDate) {
                // Skip weekends (0 = Sunday, 6 = Saturday)
                const dayOfWeek = currentDate.getDay();
                if (dayOfWeek !== 0 && dayOfWeek !== 6) {
                    // Assign study topic if available
                    const studyTopic = studyIndex < studySchedule.length ? 
                                    Object.entries(studySchedule[studyIndex])[0] : 
                                    ["Review Day", { details: "General review of previous topics", subtopics: ["Review previous material", "Practice questions", "Clarify doubts"], duration: "2 hours" }];
                    
                    calendar.push({
                        date: new Date(currentDate),
                        topic: studyTopic[0],
                        details: studyTopic[1]
                    });
                    
                    studyIndex++;
                }
                
                // Move to next day
                currentDate.setDate(currentDate.getDate() + 1);
            }
            
            return calendar;
        }
        
        function groupByMonth(calendar) {
            const months = {};
            
            calendar.forEach(entry => {
                const date = entry.date;
                const monthYear = formatDate(date, 'month');
                
                if (!months[monthYear]) {
                    months[monthYear] = [];
                }
                
                months[monthYear].push(entry);
            });
            
            return months;
        }
        
        function formatDate(date, format = 'full') {
            const options = { weekday: 'short', month: 'short', day: 'numeric', year: 'numeric' };
            
            if (format === 'full') {
                return date.toLocaleDateString('en-US', options);
            } else if (format === 'long') {
                return date.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' });
            } else if (format === 'short') {
                return date.toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric' });
            } else if (format === 'month') {
                return date.toLocaleDateString('en-US', { month: 'long', year: 'numeric' });
            }
            
            return date.toLocaleDateString();
        }
        
        function formatDateISO(date) {
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const day = String(date.getDate()).padStart(2, '0');
            
            return `${year}-${month}-${day}`;
        }
        
        function showModal(element) {
            const date = element.getAttribute('data-date');
            const topic = element.getAttribute('data-topic');
            const details = element.getAttribute('data-details');
            const duration = element.getAttribute('data-duration');
            const subtopics = JSON.parse(element.getAttribute('data-subtopics'));
            
            document.getElementById('modal-date').textContent = date;
            document.getElementById('modal-topic').textContent = topic;
            document.getElementById('modal-details').textContent = details;
            document.getElementById('modal-duration').textContent = `Estimated Duration: ${duration}`;
            
            const subtopicsList = document.getElementById('modal-subtopics');
            subtopicsList.innerHTML = '';
            
            subtopics.forEach(subtopic => {
                const li = document.createElement('li');
                li.textContent = subtopic;
                subtopicsList.appendChild(li);
            });
            
            document.getElementById('detail-modal').style.display = 'flex';
        }
        
        // Topic completion functions
        function getCompletedTopics() {
            const savedTopics = localStorage.getItem('resExamCompletedTopics');
            return savedTopics ? JSON.parse(savedTopics) : [];
        }
        
        function saveCompletedTopics(topics) {
            localStorage.setItem('resExamCompletedTopics', JSON.stringify(topics));
        }
        
        function isTopicCompleted(date, topic) {
            const completedTopics = getCompletedTopics();
            const topicId = `${formatDate(date)}-${topic}`;
            return completedTopics.includes(topicId);
        }
        
        function handleTopicCompletion(checkbox, date, topic) {
            const topicId = `${formatDate(date)}-${topic}`;
            const completedTopics = getCompletedTopics();
            const studyDay = checkbox.closest('.study-day');
            const completedBadge = studyDay.querySelector('.topic-info h3 .completed-badge');
            
            if (checkbox.checked) {
                if (!completedTopics.includes(topicId)) {
                    completedTopics.push(topicId);
                }
                studyDay.classList.add('completed-topic');
                if (!completedBadge) {
                    const topicTitle = studyDay.querySelector('.topic-info h3');
                    topicTitle.innerHTML = `${topic} <span class="completed-badge">Completed</span>`;
                }
            } else {
                const index = completedTopics.indexOf(topicId);
                if (index > -1) {
                    completedTopics.splice(index, 1);
                }
                studyDay.classList.remove('completed-topic');
                if (completedBadge) {
                    completedBadge.remove();
                    const topicTitle = studyDay.querySelector('.topic-info h3');
                    topicTitle.textContent = topic;
                }
            }
            
            saveCompletedTopics(completedTopics);
        }
    </script>
</body>
</html>
